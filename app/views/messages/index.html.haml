.wrapper

  = render partial: 'devise/shared/side_bar'

  .chat-main
    .main-header
      .main-header__left-box
        .main-header__left-box__current-group
        
        .main-header__left-box__member-list
          Member: 
      .main-header__edit-btn
        Edit
    .messages
      = render @messages
 
    .form
      = form_for [@group, @message],:html => {:class => "input-box new-message"} do |f|
        = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
        = f.label :image, class: 'input-box__label' do
          = fa_icon 'image', class: 'input-box__text__image'
          = f.file_field :image, class: 'file'
        = f.submit 'Send', class: 'submit-btn'