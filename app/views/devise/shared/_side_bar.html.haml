.side-bar
  .header
    .header__box
      %h3.header__name
        = current_user.name
      .menu
        .menu__new-group
        = link_to new_group_path, class: "icon" do
          %i.fa.fa-edit
        .menu__edit-user
        = link_to edit_user_path(current_user), class: "icon" do
          %i.fa.fa-cog
          
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
